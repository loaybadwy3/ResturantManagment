@model IEnumerable<ResturantManagment.Models.Ingredient>

@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Ingredient" asp-action="Add" class="btn btn-success">Add</a>
@if (Model.Count() > 0)
{
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
            @foreach ( var ingredient in Model)
            {
                 <tr>
                      <td>@ingredient.Name</td>
                      <td>
                          <a asp-controller="Ingredient" asp-action="Update" asp-route-id="@ingredient.Id" class="btn btn-primary col-5 m-1">Update</a>
                          <a asp-controller="Ingredient" asp-action="Delete" asp-route-id="@ingredient.Id" class="btn btn-danger col-5 m-1">Delete</a>
                      </td>
                 </tr>
            }
  </tbody>
</table>
}
else
{
    <h1>No Ingredient added yet</h1>
}


