@model IEnumerable<ResturantManagment.Models.Resturant>

@{
    ViewData["Title"] = "Index";
}

<a asp-controller="Resturant" asp-action="Add" class="btn btn-success">Add</a>
@if (Model.Count() > 0)
{
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Number</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
            @foreach ( var resturant in Model)
            {
                 <tr>
                      <td>@resturant.Name</td>
                      <td>@resturant.Number</td>
                      <td>
                          <a asp-controller="Resturant" asp-action="Update" asp-route-id="@resturant.Id" class="btn btn-primary col-5 m-1">Update</a>
                          <a asp-controller="Resturant" asp-action="Details" asp-route-id="@resturant.Id" class="btn btn-success col-5 m-1">Details</a>
                          <a asp-controller="Resturant" asp-action="Delete" asp-route-id="@resturant.Id" class="btn btn-danger col-5 m-1">Delete</a>
                      </td>
                 </tr>
            }
  </tbody>
</table>
}
else
{
    <h1>No Resturant added yet</h1>
}


